<h1>Burger Time!</h1>

<h2>Burger Bucket List</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<hr>

<h2>Add a Burger to eat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger to Eat:</label>
    <input type="text" id="ca" name="burger_ame">
  </div>

  <div class="form-group">
    <label for="devoured">Burger Devour List</label><br>
    <input type="radio" name="devoured" value="1" checked> Burger Devoured<br>
    <input type="radio" name="devoured" value="0"> Burger Bucket List
  </div>

  <button type="submit">Add Burger</button>
</form>
