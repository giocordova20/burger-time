<div class="container">
  <div class = "row">
    <div class = "col-12 text-center" id="burger-image">
      <img src="/assets/img/burgertime1.jpeg">
      {{!-- <h1>Burger Time!</h1> --}}

      <h2 id="add-to-list">Add A Burger To The List</h2>
      <form class="create-form">

        <div class="form-group">
          {{!-- <label for="ca">Burger to Eat:</label> --}}
          <input type="text" id="ca" name="burger_ame">
        </div>

        <div class="form-group">
          {{!-- <label for="devoured">Burger Devour List</label><br> --}}
          <input type="radio" name="devoured" value="1" checked> Burger Devoured<br>
          <input type="radio" name="devoured" value="0"> Burger Bucket List
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

  <div class = "row" id = "bucket-devoured">
    <div class = "col-6 text-center">
      <h2>Burger Bucket List</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class = "col-6 text-center">
      <h2>Burgers Devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>